require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "grizzly-http-servlet"

    gem.summary = %Q{A JavaGem version of grizzly-http-servlet - packaged by JavaGems (http://www.javagems.org) - original by SUN Microsystems (http://www.sun.com)}



    gem.description = %Q{grizzly-http-servlet packaged up in a JavaGem}

    gem.homepage = "http://www.javagems.org/"

    gem.authors = ["pending/unknown"]

    gem.email = "autobuild@javagems.org"
    gem.version = "1.9.10"

  

    gem.add_development_dependency "grizzly-http", "~>1.9.10"

    gem.add_development_dependency "jaxb-impl", "~>2.1.10"

    gem.add_development_dependency "jersey-server", "~>1.0.3"

    gem.add_development_dependency "junit", "~>3.8.2"

    gem.add_development_dependency "grizzly-utils", "~>1.9.10"

    gem.add_development_dependency "servlet-api", "~>2.5"

    gem.add_development_dependency "jersey-client", "~>1.0.3"

  end
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: sudo gem install jeweler"
end

task :default => :build
